FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/include/input"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $internal_U;

boundaryField
{
    pitchbladewalls
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    rushtonwalls
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    reactorwalls
    {
        type            noSlip;
    }
    overflowwalls
    {
        type            noSlip;
    }
    connectingtube
    {
        type            noSlip;
    }
    inlet1
    {
        type            noSlip;
    }
    inlet-nh3
    {
        type            flowRateInletVelocity;
        volumetricFlowRate  $flowrate_nh3; /* m3/s */
    }
    inlet-naoh
    {
        type            flowRateInletVelocity;
        volumetricFlowRate  $flowrate_naoh; /* m3/s */
    }
    inlet-metals
    {
        type            flowRateInletVelocity;
        volumetricFlowRate  $flowrate_metals; /* m3/s */
    }
    injectionpipeswalls
    {
        type            noSlip;
    }
    outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform $internal_U;
    }
    top-and-baffles
    {
        type            noSlip;
    }
    shaft
    {
        type            rotatingWallVelocity;
        origin          (0 0 0);
        axis            (0 0 1);
        omega           $angular_velocity; /* rad/s */
    }
}


