    outletAverage
    {
        type            surfaceFieldValue;
        libs            ("libfieldFunctionObjects.so");

        fields
        (
            M0 M1 M2 M3
        );

        operation       areaAverage;
        regionType      patch;
        name            outlet;
        log             true;
        writeFields     no;

        writePrecision  15;
        enabled         true;
        log             true;
        executeControl  timeStep;
        executeInterval $endTime;
        writeControl    timeStep;
        writeInterval   $endTime;
    }
