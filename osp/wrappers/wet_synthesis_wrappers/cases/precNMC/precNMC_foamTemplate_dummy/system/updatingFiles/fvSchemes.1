FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
    grad(p)         Gauss linear;
    grad(U)         Gauss linear;
    grad(k)         Gauss linear;
    grad(epsilon)   Gauss linear;
}

divSchemes
{
    default         none;

    div(phi,U)        Gauss upwind; // linearUpwind grad(U)
    div(phi,k)        Gauss vanLeer; // vanLeer
    div(phi,epsilon)  Gauss vanLeer; // vanLeer

    "div\(phi,p_env[1-3]\)"    Gauss upwind;

    "div\(phi,total_(Nickel|Manganese|Cobalt)\)"    Gauss upwind; // changed
    "div\(phi,total_NH3\)"                          Gauss upwind; // changed
    "div\(phi,total_(Na|SO4)\)"                     Gauss upwind; // changed

    div(phi,M)        Gauss multivariateIndependent // multivariateSelection
    {
        M0    upwind; // changed
        M1    upwind; // changed
        M2    upwind; // changed
        M3    upwind; // changed
        M4    upwind; // changed
        M5    upwind; // changed

        // M0    vanLeer;
        // M1    vanLeer;
        // M2    vanLeer;
        // M3    vanLeer;
        // M4    vanLeer;
        // M5    vanLeer;
    };

    div((nuEff*dev2(T(grad(U)))))   Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method meshWave;
}

