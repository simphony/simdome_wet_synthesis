FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/include/input"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform $internal_nut;

boundaryField
{
    top-wall
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    side-wall
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    bottom-wall
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    baffles
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    inlet-tubes
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    impeller
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    shaft
    {
        type            nutkWallFunction;
        value           $internalField;
    }

    inlet-metal
    {
        type            calculated;
        value           uniform $inlet_nut;
    }
    inlet-naoh
    {
        type            calculated;
        value           uniform $inlet_nut;
    }
    inlet-nh3
    {
        type            calculated;
        value           uniform $inlet_nut;
    }

    outlet
    {
        type            calculated;
        value           uniform $outlet_nut;
    }
}

