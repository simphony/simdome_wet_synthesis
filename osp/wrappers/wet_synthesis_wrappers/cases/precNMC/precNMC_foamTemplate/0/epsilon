FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/include/input"

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform $internal_epsilon;

boundaryField
{
    top-wall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    side-wall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    bottom-wall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    baffles
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    inlet-tubes
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    impeller
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    shaft
    {
        type            epsilonWallFunction;
        value           $internalField;
    }

    inlet-metal
    {
        type            turbulentMixingLengthDissipationRateInlet;
        mixingLength    $inlet_hydraulic_diameter;
        value           $internalField;  // placeholder
    }
    inlet-naoh
    {
        type            turbulentMixingLengthDissipationRateInlet;
        mixingLength    $inlet_hydraulic_diameter;
        value           $internalField;  // placeholder
    }
    inlet-nh3
    {
        type            turbulentMixingLengthDissipationRateInlet;
        mixingLength    $inlet_hydraulic_diameter;
        value           $internalField;  // placeholder
    }
    
    outlet
    {
        type            inletOutlet;
        inletValue      uniform $backflow_epsilon;
    }
}

