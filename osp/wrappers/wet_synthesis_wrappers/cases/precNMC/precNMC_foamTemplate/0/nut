FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/include/input"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform $internal_nut;

boundaryField
{
    pitchbladewalls
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    rushtonwalls
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    reactorwalls
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    overflowwalls
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    connectingtube
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    inlet1
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    inlet-nh3
    {
        type            calculated;
        value           uniform $inlet_nut;
    }
    inlet-naoh
    {
        type            calculated;
        value           uniform $inlet_nut;
    }
    inlet-metals
    {
        type            calculated;
        value           uniform $inlet_nut;
    }
    injectionpipeswalls
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    outlet
    {
        type            calculated;
        value           uniform $outlet_nut;
    }
    top-and-baffles
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    shaft
    {
        type            nutkWallFunction;
        value           $internalField;
    }
}

